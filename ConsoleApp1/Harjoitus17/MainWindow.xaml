        <TextBox x:Name="txt_termostaatti" HorizontalAlignment="Left" Height="23" Margin="137,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="txt_termostaatti_TextChanged"/>
